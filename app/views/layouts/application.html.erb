<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/d8e23ab473.js" crossorigin="anonymous"></script>
  </head>

  <body>
  <header class="bg-light py-2">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center">
      <% if user_signed_in? %>
        <ul class="nav">
          <li><%= link_to "Bookers", user_path(current_user), class: "nav-link px-3" %></li>
        </ul>
        <ul class="nav">
          <li>
            <%= link_to user_path(current_user), class: "nav-link px-3" do %>
            <i class="fa-solid fa-house me-1"></i> Home
            <% end %>
          </li>
          <li><%= link_to users_path, class: "nav-link px-3" do %>
            <i class="fa-solid fa-users"></i> Users
            <% end %>
          </li>
          <li><%= link_to books_path, class: "nav-link px-3" do %>
            <i class="fa-solid fa-book-open"></i> Books
            <% end %>
          </li>
            <li><%= link_to destroy_user_session_path, method: :delete, class: "nav-link px-3" do %>
            <i class="fa-solid fa-right-from-bracket"></i> Log out
            <% end %>
          </li>
        </ul>
      <% else %>
        <ul class="nav">
          <li><%= link_to "Bookers", root_path, class: "nav-link px-3" %></li>
        </ul>
        <ul class="nav">
        <li>
          <%= link_to root_path, class: "nav-link px-3" do %>
          <i class="fa-solid fa-house me-1"></i> Home
        <% end %>
        </li>
          <li><%= link_to about_path, class: "nav-link px-3" do %>
            <i class="fa-solid fa-link"></i> About
        <% end %>
        </li>
          <li><%= link_to new_user_registration_path, class: "nav-link px-3" do %>
          <i class="fa-solid fa-user-plus"></i> Sign up
          <% end %>
          </li>
          <li><%= link_to new_user_session_path, class: "nav-link px-3" do %>
          <i class="fa-solid fa-right-to-bracket"></i> Log in
          <% end %>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
</header>

  <div class="container mt-4">
    <div class="row">
      <% if user_signed_in? && !(controller_name == "users" && action_name == "edit") %>
        <div class="col-md-3">
        <%= render 'shared/sidebar' %>
        </div>
        <div class="col-md-9">
          <%= yield %>
        </div>
      <% else %>
        <div class="col-md-12">
          <%= yield %>
        </div>
      <% end %>
    </div>
  </div>

  <footer class="text-center mt-5">
    <p>CopyRight Infratop.inc</p>
  </footer>
</body>
