<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <h2>User info</h2>

  <%= form_with(model: @user, local: true, html: { multipart: true }) do |f| %>

    <div class="form-group mb-3">
      <%= f.label :name, "Name" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :profile_image, "Profile Image (.jpg only)" %>
      <%= f.file_field :profile_image, accept: ".jpg", class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :introduction, "Introduction" %>
      <%= f.text_area :introduction, class: "form-control" %>
    </div>

    <%= f.submit "Update User", class: "btn btn-primary" %>

  <% end %>
</div>